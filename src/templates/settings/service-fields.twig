{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set title = "Service Fields"|t('booked') %}
{% set selectedSubnavItem = 'settings' %}
{% set selectedSettingsSubnavItem = 'service-fields' %}

{% block sidebar %}
    {% include "booked/settings/_sidebar" %}
{% endblock %}

{% block content %}
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        <input type="hidden" name="action" value="booked/cp/settings/save-service-fields">
        {{ redirectInput('booked/settings/service-fields') }}

        <p class="instructions">
            {{ "Define custom fields for services. These fields will be available when editing services in the Control Panel."|t('booked') }}
        </p>

        <div id="field-layout-designer">
            {{ forms.fieldLayoutDesignerField({
                fieldLayout: fieldLayout,
                customConfig: {
                    fieldSettingsHandle: 'service'
                }
            }) }}
        </div>

        <hr>

        <div class="buttons">
            <button type="submit" class="btn submit">{{ 'Save'|t('app') }}</button>
        </div>
    </form>
{% endblock %}
