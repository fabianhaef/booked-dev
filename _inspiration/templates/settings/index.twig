{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set title = "Buchungseinstellungen" %}
{% set crumbs = [
    { label: "Buchungen", url: url('booking') },
    { label: "Einstellungen" }
] %}

{% block actionButton %}
    <form method="post" style="display: inline;">
        {{ csrfInput() }}
        <input type="hidden" name="action" value="booking/settings/test-email">
        <button type="submit" class="btn">Test-E-Mail</button>
    </form>
{% endblock %}

{% block content %}
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        <input type="hidden" name="action" value="booking/settings/save">

        <div class="fields">
            <h2>Kontaktinformationen</h2>

            <div class="field" id="ownerName-field">
                <div class="heading">
                    <label id="ownerName-label" for="ownerName">Name</label>
                </div>
                <div class="input">
                    <input class="text fullwidth" type="text" id="ownerName" name="ownerName"
                           value="{{ settings.ownerName }}">
                </div>
                <div class="instructions">
                    <p>Name oder Firmenname für Buchungs-E-Mails.</p>
                </div>
                {% if settings.hasErrors('ownerName') %}
                    <ul class="errors">
                        {% for error in settings.getErrors('ownerName') %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>

            <div class="field" id="ownerEmail-field">
                <div class="heading">
                    <label id="ownerEmail-label" for="ownerEmail">E-Mail</label>
                </div>
                <div class="input">
                    <input class="text fullwidth" type="email" id="ownerEmail" name="ownerEmail"
                           value="{{ settings.ownerEmail }}">
                </div>
                <div class="instructions">
                    <p>E-Mail-Adresse für Buchungsbenachrichtigungen.</p>
                </div>
                {% if settings.hasErrors('ownerEmail') %}
                    <ul class="errors">
                        {% for error in settings.getErrors('ownerEmail') %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>

            <hr>

            <h2>Inhaber-Benachrichtigung</h2>
            <p class="light">Erhalten Sie eine E-Mail wenn eine neue Buchung eingeht.</p>

            <div class="field" id="ownerNotificationEnabled-field">
                <div class="heading">
                    <label id="ownerNotificationEnabled-label" for="ownerNotificationEnabled">Benachrichtigung aktivieren</label>
                </div>
                <div class="input">
                    {{ forms.lightswitch({
                        id: 'ownerNotificationEnabled',
                        name: 'ownerNotificationEnabled',
                        on: settings.ownerNotificationEnabled,
                        small: true
                    }) }}
                </div>
                <div class="instructions">
                    <p>Bei neuen Buchungen eine E-Mail an die oben angegebene Adresse senden.</p>
                </div>
            </div>

            <div class="field" id="ownerNotificationSubject-field">
                <div class="heading">
                    <label id="ownerNotificationSubject-label" for="ownerNotificationSubject">Betreffzeile der Inhaber-Benachrichtigung</label>
                </div>
                <div class="input">
                    <input class="text fullwidth" type="text" id="ownerNotificationSubject" name="ownerNotificationSubject"
                           value="{{ settings.ownerNotificationSubject }}" placeholder="Neue Buchung eingegangen">
                </div>
                <div class="instructions">
                    <p>Betreffzeile für die Benachrichtigungs-E-Mail. Leer lassen für Standard.</p>
                </div>
            </div>

            <hr>

            <h2>Zahlungs-QR-Code</h2>
            <p class="light">Laden Sie einen QR-Code hoch, der an Buchungsbestätigungs-E-Mails angehängt wird.</p>

            {{ forms.elementSelectField({
                label: 'QR-Code Bild',
                id: 'paymentQrAssetId',
                name: 'paymentQrAssetId',
                elementType: 'craft\\elements\\Asset',
                elements: settings.paymentQrAsset ? [settings.paymentQrAsset] : null,
                limit: 1,
                criteria: {
                    kind: 'image'
                },
                instructions: 'Wählen Sie ein Bild aus, das als Zahlungs-QR-Code verwendet werden soll.'
            }) }}
        </div>

        <div class="buttons">
            <button type="submit" class="btn submit">Einstellungen speichern</button>
        </div>
    </form>
{% endblock %}

{% css %}
.instructions ul {
    margin: 8px 0 0 0;
    padding-left: 20px;
}

.instructions li {
    margin-bottom: 4px;
}

.instructions code {
    background: #f5f5f5;
    padding: 2px 4px;
    border-radius: 3px;
    font-family: monospace;
    font-size: 12px;
}
{% endcss %}
